<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollwiew"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">



        <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/newprofile_image"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="35dp"
                            android:src="@drawable/profile"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/profile_user_name_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:text="Username"
                            android:textColor="@color/colorPrimary"
                            android:textSize="22sp"
                            android:layout_below="@id/newprofile_image"
                            android:layout_gravity="center_horizontal"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="70dp"
                            android:id="@+id/linear">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/ic_email_black_24dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="sans-serif-condensed"
                                            android:paddingLeft="16dp"
                                            android:text="Contact us"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="20sp" />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp"
                                    android:paddingTop="10dp"
                                    >

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/ic_priority_high_black_24dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="sans-serif-condensed"
                                            android:paddingLeft="15dp"
                                            android:text="Privacy policy"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="20sp" />


                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp"
                                    android:paddingTop="10dp">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/ic_send_black_24dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="sans-serif-condensed"
                                            android:paddingLeft="15dp"
                                            android:text="Terms of use"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="20sp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="25dp"
                                    android:paddingTop="10dp">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/ic_announcement_black_24dp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:fontFamily="sans-serif-condensed"
                                            android:paddingLeft="15dp"
                                            android:text="Send Requisition"
                                            android:textStyle="bold"
                                            android:id="@+id/txt_requisition"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="20sp" />
                                </LinearLayout>
                        </LinearLayout>


                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/linearLayout">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    >
                                        <ImageView
                                            android:layout_width="90dp"
                                            android:layout_height="35dp"
                                            android:id="@+id/image_profile_logout"
                                            android:background="@color/colorPrimary"
                                            android:src="@drawable/ic_logout"
                                            />
                                </LinearLayout>
                        </android.support.v7.widget.CardView>

                </LinearLayout>

        </ScrollView>


</RelativeLayout>