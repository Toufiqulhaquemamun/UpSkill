<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_marginTop="4dp"
    android:background="@color/exo_edit_mode_background_color"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_video_file_index"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="00"
        android:textSize="18sp"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_video_file_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="17sp"
            android:text="@string/text_video_file_name"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/text_video_file_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:layout_gravity="right"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>


</LinearLayout>